{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This documentation for One-Eyed-Willy pdf generator.",
        "title": "One-Eyed-Willy REST pdf generation API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
